<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/item_view"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/scan_view"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/amazing_fantasy_15_scan" />

    <TextView
        android:id="@+id/series_title_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/scan_view"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        tools:text="@string/amazing_fantasy"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/issue_num_view"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_toEndOf="@id/series_title_view"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        tools:text="#15"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/writer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/scan_view"
        android:layout_below="@id/series_title_view"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        tools:text="Writer: Stan Lee"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/artist_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/scan_view"
        android:layout_below="@id/writer_view"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        tools:text="Artist: Steve Ditko"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/publisher_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/scan_view"
        android:layout_below="@id/artist_view"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        tools:text="Publisher: "
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#AAAAAA"
        android:layout_below="@id/scan_view"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>